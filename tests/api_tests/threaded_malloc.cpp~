#include "common.h"
#include "omp.h"
#define  NTHREADS 8

class THREADEDMALLOC: public :: testing::Test
{

protected:
  
  THREADEDMALLOC()
  {}
  
  void SetUp()
  {}
  
  void TearDown()
  {}
};


TEST_F(THREADEDMALLOC, HbwMalloc1KB){

  char *ptr[NTHREADS];
  int ret = HBW_SUCCESS;
  omp_set_num_threads(NTHREADS);


#pragma omp parallel
  {
    printf ("Total Number of Threads : %d\n", omp_get_num_threads());
    int tid = omp_get_thread_num();
    printf ("tid: %d\n", tid);
    ptr[tid] = (char *) hbw_malloc(KB);
    if (NULL == ptr[tid]){
      ret = HBW_ERROR;
    }
  
    ptr[tid][1024] ='a';
    hbw_free(ptr[tid]);
  }
  ASSERT_EQ(HBW_SUCCESS, ret);
}
